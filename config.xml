<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kuzmenko.cnchelper" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CNCHelper</name>
    <description>
        Assistance for operators of CNC machines
    </description>
    <author email="kuzmenko@ex.ua" href="https://github.com/SergeyKuzmenko">
        Sergey Kuzmenko
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-browsersync" spec="^1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.3" />
    <platform name="browser">
        <preference name="SplashScreen" value="www/img/favicon.png" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenBackgroundColor" value="#ffffff" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="2000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashScreenWidth" value="150" />
        <preference name="SplashScreenHeight" value="150" />
    </platform>
    <platform name="android">
        <splash density="land-hdpi" src="res/screen/android/splash.png" />
        <splash density="land-ldpi" src="res/screen/android/splash.png" />
        <splash density="land-mdpi" src="res/screen/android/splash.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash.png" />
        <splash density="port-hdpi" src="res/screen/android/splash.png" />
        <splash density="port-ldpi" src="res/screen/android/splash.png" />
        <splash density="port-mdpi" src="res/screen/android/splash.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash.png" />
        <icon density="ldpi" src="www/img/icon.png" />
        <icon density="mdpi" src="www/img/icon.png" />
        <icon density="hdpi" src="www/img/icon.png" />
        <icon density="xhdpi" src="www/img/icon.png" />
        <icon density="xxhdpi" src="www/img/icon.png" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenWidth" value="150" />
        <preference name="SplashScreenHeight" value="150" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenSpinnerColor" value="white" />
        <preference name="SplashScreenDelay" value="1000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
    </platform>
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^7.1.4" />
</widget>
